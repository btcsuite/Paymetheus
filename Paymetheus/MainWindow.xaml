<Window x:Class="Paymetheus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paymetheus"
        xmlns:viewmodels="clr-namespace:Paymetheus.ViewModels"
        mc:Ignorable="d"
        Background="{DynamicResource ColorDarkBlueFull}" 
        Title="{Binding Path=WindowTitle, Mode=OneTime}"
        Height="600" Width="1050"
        Closed="Window_Closed"
        DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=ShellViewModel}">
    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Margin" Value="0,0,0,4" />
        </Style>
    </Window.Resources>
    <Grid>
        <UserControl Visibility="{Binding StartupWizardVisible, Converter={StaticResource visibilityConverter}}" Focusable="False">
            <local:ConnectionWizardView DataContext="{Binding StartupWizard}"
                                    VerticalAlignment="Center"
                                    Width="700" Focusable="False"/>
        </UserControl>
        <local:ShellView x:Name="Shellview"
                         Visibility="{Binding Path=StartupWizardVisible, Converter={StaticResource invertedVisibilityConverter}}"/>
    </Grid>
</Window>
